<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.updateprofile.UpdateProifleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_update_email"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#478CF1"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="@font/gothic_a1"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#BEDBFC"
            android:textColor="#478CF1"
            android:textSize="18sp"
            android:layout_marginTop="60dp" />

        <EditText
            android:id="@+id/edt_update_no_telp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#478CF1"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="@font/gothic_a1"
            android:hint="No Telepon"
            android:inputType="textEmailAddress"
            android:textColorHint="#BEDBFC"
            android:textColor="#478CF1"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update_profile"
            style="@android:style/Widget.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_ripple"
            android:fontFamily="@font/gothic_a1_bold"
            android:text="Update"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_gravity="center" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>