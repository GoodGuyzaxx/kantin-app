<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sw_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFF4"
    tools:context=".ui.user.Home.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top section layout -->
        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/primeblue"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Top section with profile name and image -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/tv_home_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gothic_a1_bold"
                    android:text="Hi, Dewantara"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_home_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_account_box_24_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Text heading for Kantin -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gothic_a1_bold"
                android:text="Daftar Kantin"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <!-- RecyclerView for Kantin (horizontal orientation) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_kantin_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_kantin" />

        </LinearLayout>

        <!-- Text heading for Rekomendasi Menu -->
        <TextView
            android:id="@+id/tv_rekomendasi_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rekomendasi Menu"
            android:fontFamily="@font/gothic_a1_bold"
            android:textSize="20sp"
            android:textColor="#B3000000"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/top_layout"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- RecyclerView for Rekomendasi Menu (vertical orientation) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_menu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_rekomendasi_menu"
            app:layout_constraintBottom_toTopOf="@id/fab_open"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_rekomendasi_menu" />

        <!-- Floating Action Button to add something -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/secondblue"
            android:src="@drawable/baseline_add_24"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Floating Action Button for orders (initially hidden) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:backgroundTint="@color/primeblue"
            app:layout_constraintBottom_toTopOf="@+id/fab_open"
            app:layout_constraintEnd_toEndOf="@+id/fab_open"
            app:srcCompat="@drawable/baseline_assignment_24" />

        <!-- Floating Action Button for cart (initially hidden) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:visibility="gone"
            android:backgroundTint="@color/primeblue"
            app:layout_constraintBottom_toTopOf="@+id/fab_order"
            app:layout_constraintEnd_toEndOf="@+id/fab_order"
            app:srcCompat="@drawable/baseline_shopping_cart_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
