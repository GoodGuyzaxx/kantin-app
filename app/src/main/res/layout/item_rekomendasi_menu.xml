<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/white">

        <!-- Image for menu -->

        <ImageView
            android:id="@+id/iv_image_menu"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:contentDescription="Gambar Menu"
            android:layout_gravity="center_vertical"
            android:src="@drawable/login_img"
            android:padding="4dp"
            android:elevation="2dp"
            android:outlineProvider="background"/>

        <!-- Text container for menu details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Menu name -->
            <TextView
                android:id="@+id/text_nama_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Menu"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#212121"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Nama Kantin -->
            <TextView
                android:id="@+id/text_nama_kantin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Kantin"
                android:textSize="14sp"
                android:textColor="#757575"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>

            <!-- Harga Menu -->
            <TextView
                android:id="@+id/text_harga_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mata_uang"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Container for rating in the top right -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end">

            <!-- Rating as Text -->
            <TextView
                android:id="@+id/text_rating_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5/5"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:layout_marginStart="8dp"
                android:layout_gravity="end"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
